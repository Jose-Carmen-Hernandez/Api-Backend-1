<div id="container-products" class="grid grid-cols-1 md:grid-cols-3 gap-4">

  <div class="bg-white rounded-lg shadow-md p-4">
    <img class="w-full"
      src="https://th.bing.com/th/id/R.424112f58756ad42c64268d9f18e8a5d?rik=%2fq9CDoIBzhfvSw&pid=ImgRaw&r=0"
      alt="Ropa y zapatos" />
    <p class="font-bold text-xl mb-2">Nombre: {{productFinded.title}}</p>
    <p class="text-gray-700 mb-2">Descripcion: {{productFinded.description}}</p>
    <div class="flex justify-between items-center mb-2">
      <p class="text-gray-500">Codigo: {{productFinded.code}}</p>
      <p class="font-bold text-green-500">Precio: {{productFinded.price}}</p>
    </div>
    <p class="text-gray-700 mb-2">Disponibles: {{productFinded.stock}}</p>
    <p class="text-gray-700 mb-2">Categoria: {{productFinded.category}}</p>
    <p class="text-gray-700 mb-2">Disponibilidad:
      {{#if productFinded.status}}
      Disponible
      {{else}}
      No disponible para env√≠os
      {{/if}}
    </p>
    <form action="/api/carts/{{cid}}/products/{{productFinded._id}}" method="post">
      <label for="quantity">Cantidad:</label>
      <div>
        <input type="number" id="quantity" name="quantity" min="1" max="{{productFinded.stock}}" value="1" required />
      </div>
      <button type="submit"
        class="bg-blue-500 hover:bg-blue-700 text-white font-bold mt-4 py-2 px-4 rounded-full">Agregar al
        carrito</button>
    </form>
  </div>

</div>