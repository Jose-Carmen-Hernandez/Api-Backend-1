<h1>Productos</h1>

{{#if isValid}}
<div class="grid grid-cols-1 md:grid-cols-3 gap-4">  {{#each docs}}
    <div class="bg-white rounded-lg shadow-md p-4">
      <img class="w-full" src="https://th.bing.com/th/id/OIP.JHIOROMokVv5hCO6soD2EgHaF2?w=207&h=180&c=7&r=0&o=5&dpr=1.3&pid=1.7" alt="Ropa y zapatos">
        <p class="font-bold text-xl mb-2">Nombre: {{this.title}}</p>
      <p class="text-gray-700 mb-2">Descripcion: {{this.description}}</p>
      <div class="flex justify-between items-center mb-2">  <p class="text-gray-500">Codigo: {{this.code}}</p>
        <p class="font-bold text-green-500">Precio: {{this.price}}</p>
      </div>
      <p class="text-gray-700 mb-2">Disponibles: {{this.stock}}</p>
      <p class="text-gray-700 mb-2">Categoria: {{this.category}}</p>
    </div>
  {{/each}}
</div>

<br/>

<div class="flex justify-center items-center">  {{#if hasPrevPage}}
    <a href={{this.prevLink}} class="text-blue-500 hover:underline"> << Anterior</a>
  {{/if}}
  &nbsp;
  <span class="font-bold">{{this.page}}</span>  &nbsp;
  {{#if hasNextPage}}
    <a href={{this.nextLink}} class="text-blue-500 hover:underline">Siguiente >></a>
  {{/if}}
</div>
{{else}}
<h1>No hay productos</h1>
{{/if}}